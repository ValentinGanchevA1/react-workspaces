{
	"compileOnSave": false,
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist/@types",
		"skipLibCheck": true,
		"strictNullChecks": false,
		"experimentalDecorators": true,
		"suppressImplicitAnyIndexErrors": true,
		"suppressExcessPropertyErrors": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
    "moduleResolution": "Node",
    "sourceMap": true,
		"jsx": "react",
		"target": "es6",
		"module": "ES6",
		"lib": [
			"es2015",
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"./dist"
	]
}
